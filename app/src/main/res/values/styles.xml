<resources>

    <!-- Base application theme. -->
      <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyActionBarLogo" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="background">@color/colorPrimary</item>
        <item name="logo">@drawable/ic_logo</item>
        <item name="displayOptions">useLogo|showHome</item>
    </style>

    <style name="menuWhiteTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">#e9aa00</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">#303F9F</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">#58983f</item>
        <item name="logo">@drawable/ic_logo</item>
        <item name="android:homeAsUpIndicator">@drawable/logo_voltar</item>
        <item name="titleTextColor">@android:color/white</item>
        <item name="displayOptions">useLogo|showHome</item>
    </style>

    <style name="AppThemeYellow" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryDark">@color/yellow</item>
        <item name="colorAccent">@color/yellow</item>
    </style>


    <style name="TemaPadraoTab" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#e9aa00</item>
        <item name="colorPrimaryDark">#303F9F</item>
        <item name="colorAccent">#58983f</item>
    </style>


    <style name="AppThemeTab" parent="Theme.AppCompat.Light.NoActionBar">
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">#e9aa00</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">#303F9F</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">#58983f</item>
        <item name="titleTextColor">@android:color/white</item>
    </style>

</resources>
